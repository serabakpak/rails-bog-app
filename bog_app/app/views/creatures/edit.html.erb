<h1>Create a new Creature!!!</h1>
<!-- refactor all of this ':creature, url: "/creatures", method: "post' into @creature -->
<%= form_for @creature, method: "patch" do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %><br>
	</div>
	<div class="form-group">	
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %><br>
	</div>
	<%= f.submit "Save Creature", class: "btn btn-default" %>
  
<% end %>