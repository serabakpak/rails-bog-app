<h1>Creatures List</h1>

<% @creatures.each do |creature| %>
	<p>
		<strong>Name: </strong><%= creature.name %>
		<strong>Description: </strong><%= creature.description %>
		<%= button_to "Show", creature_path(creature), method: :get %>
		<%= button_to "Edit", edit_creature_path(creature), method: :get %>
		<%= button_to "Delete", creature, method: :delete %>
	</p>
<% end %>