<h1>All the creatures</h1>

<% @creatures.each do |creature| %>
	<p>

		<strong>Name:</strong> <%= creature.name %><br>
		<strong>Description:</strong> <%= creature.description %><br>
		<%= button_to "Show", creature_path(creature), method: :get, class: "btn btn-primary" %>
		<%= button_to "Edit", edit_creature_path(creature), method: :get, class: "btn btn-primary" %>
		<%= button_to "Delete", creature, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary"%>
		

	<p>
<% end %>