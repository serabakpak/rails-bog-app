<%= form_for @creature, html: { multipart: true } do |f| %>	
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
		
	<div class="form-group">
		<%= f.label :avatar %>
		<%= f.file_field :avatar %>
	</div>
	<%= f.submit "Save Creature", class: 'btn btn-success' %>
<% end %>


