<h1>Log In!</h1>

<%= form_for @user, url: '/sessions', method: 'post' do |f| %>	

	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, class: "form-control" %>
		
	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password, class: "form-control" %>
	</div>
	<%= f.submit "Log In!", class: 'btn btn-success' %>
<% end %>